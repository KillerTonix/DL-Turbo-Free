<Window x:Class="DL_Turbo_Free.SetSeparatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DL_Turbo_Free"
        mc:Ignorable="d" Background="#FF2E2E2E"
        WindowStartupLocation="CenterScreen"
        Title="Set Separator" Height="190" Width="300"
        WindowStyle="ToolWindow" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="TerminalBtn" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>

            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid>
        <StackPanel Margin="10" Orientation="Vertical">
            <TextBlock Text="Set Separator Options" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Separator type:" Margin="10" Foreground="White"/>
            <ComboBox x:Name="SeparatorTypeComboBox" Margin="10,0,10,10" Foreground="Black">
                <ComboBoxItem Content="[actor]"/>
                <ComboBoxItem Content="actor\"/>
                <ComboBoxItem Content="actor)"/>
                <ComboBoxItem Content="(actor)"/>
                <ComboBoxItem Content="actor/"/>
                <ComboBoxItem Content="actor+"/>
                <ComboBoxItem Content="actor:"/>
            </ComboBox>
        </StackPanel>
        <Button x:Name="ApplyButton" Style="{StaticResource TerminalBtn}" Content="Apply" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Click="ApplyButton_Click"/>

    </Grid>
</Window>
