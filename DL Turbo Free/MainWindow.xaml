<Window x:Class="DL_Turbo_Free.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DL_Turbo_Free"
        mc:Ignorable="d"
        Title="DL Turbo Free" Height="380" Width="600" Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="TerminalBtn" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>    
    
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="10">
                <Label Content="File Path:"  Foreground="White" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" HorizontalAlignment="Left" Padding="0,0,0,0"/>
                <TextBox x:Name="FilePathTextBox" Text="" Background="#FF3A3A3A" BorderBrush="Black" IsReadOnly="True" Foreground="White" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Margin="65,0,0,0" />
            </Grid>

            <Grid x:Name="SettingsGrid" Grid.Row="1" Margin="10" Background="#0C3A3A3A">
                <Grid.RowDefinitions>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Label Content="Converting Settings" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top"/>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <Label Content="Output Format:" Foreground="White" VerticalAlignment="Center"/>
                            <RadioButton x:Name="XtoYRadioButton" Content="X to Y" IsChecked="True" Foreground="White" Margin="0,5,0,0" Checked="XtoYRadioButton_Checked"/>
                            <RadioButton x:Name="XtoDocxRadioButton" Content="X to Docx" Foreground="White" Margin="0,5,0,0" Checked="XtoDocxRadioButton_Checked"/>
                        </StackPanel>

                        <StackPanel x:Name="SrtSettingsStackPanel" Grid.Column="1" Margin="20,0,0,0">
                            <Label Content="SRT Settings:" Foreground="White" VerticalAlignment="Center"/>
                            <RadioButton x:Name="CharacterNamesInBracketsRadioButton" Content="Character names in brackets" IsChecked="True" Foreground="White" Margin="0,5,0,0"/>
                            <RadioButton x:Name="CharactersInSeparateFilesRadioButton" Content="Characters in separate files" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel Grid.Row="1" Margin="0,10,0,0">
                    <Label Content="Output Settings" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <CheckBox x:Name="ExportWithLineBreaks" Content="Export with line breaks" Foreground="White" Margin="0,5,0,0"/>
                            <CheckBox x:Name="OpenTheFolderAfterConvertion" Content="Open the folder after conversion" Foreground="White" Margin="0,5,0,0"/>
                            <CheckBox x:Name="CloseTheAppAfterConvertion" Content="Close the program after conversion" Foreground="White" Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button x:Name="SetSeparatorBtn" Style="{StaticResource TerminalBtn}" Grid.Column="1" Width="100" Height="30" Content="Set Separator" Click="SetSeparatorBtn_Click" ></Button>
                    </Grid>
                </StackPanel>

                <Grid Grid.Row="2" Margin="0,10,0,0">
                    <Button x:Name="ConvertButton" Style="{StaticResource TerminalBtn}" Content="Convert" Width="100" Height="30" HorizontalAlignment="Center" Click="ConvertButton_Click"/>
                </Grid>
            </Grid>
        </Grid>


        <Border Background="#AA000000" Visibility="Hidden" x:Name="FileOpenOrDragAndDropBorder" MouseLeftButtonDown="FileOpenOrDragAndDropBorder_MouseLeftButtonDown" AllowDrop="True" Drop="FileOpenOrDragAndDropBorder_Drop" DragEnter="FileOpenOrDragAndDropBorder_DragEnter" DragLeave="FileOpenOrDragAndDropBorder_DragLeave">
            <Label x:Name="FileOpenOrDragAndDropLabel" Content="Drag and Drop your file here or click to browse or double click" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseLeftButtonDown="FileOpenOrDragAndDropBorder_MouseLeftButtonDown"/>
        </Border>

    </Grid>

</Window>
