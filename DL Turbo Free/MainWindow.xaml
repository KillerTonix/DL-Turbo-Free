<Window x:Class="DL_Turbo_Free.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DL_Turbo_Free"
        mc:Ignorable="d"
        Title="DL Turbo Free" Height="520" Width="650" 
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">

    <Window.Resources>
        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="#3E3E42"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="#007ACC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button" BasedOn="{StaticResource ModernBtn}">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0097FB"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="15"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="Label">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Label Content="Input File:" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <Border Grid.Column="1" BorderBrush="#3F3F46" BorderThickness="1" CornerRadius="3">
                        <TextBox x:Name="FilePathTextBox" 
                                 Background="#1E1E1E" Foreground="White" BorderThickness="0"
                                 Padding="5" VerticalContentAlignment="Center" IsReadOnly="True"/>
                    </Border>

                    <Button x:Name="BrowseButton" Grid.Column="2" Style="{StaticResource ModernBtn}" Content="..." 
                            Width="40" Margin="10,0,0,0" ToolTip="Browse File" Click="BrowseButton_Click"/>
                </Grid>
            </Border>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <Border Style="{StaticResource CardBorder}" Height="110" Visibility="Visible">
                        <StackPanel>
                            <Label Content="Conversion Mode" Style="{StaticResource SectionHeader}"/>
                            <RadioButton x:Name="XtoYRadioButton" Content="X format to Y format"  Checked="XtoYRadioButton_Checked"/>
                            <RadioButton x:Name="XtoDocxRadioButton" Content="X format to Word (Docx)" IsChecked="True" Checked="XtoDocxRadioButton_Checked"/>
                        </StackPanel>
                    </Border>

                    <Border x:Name="SrtSettingsStackPanel" Style="{StaticResource CardBorder}" Visibility="Collapsed">
                        <StackPanel>
                            <Label Content="SRT Options" Style="{StaticResource SectionHeader}"/>
                            <CheckBox x:Name="CharactersInSeparateFilesRadioButton" Content="Split Actors into separate files"/>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <Border Style="{StaticResource CardBorder}" x:Name="ProcessingRulesBorder" Visibility="Collapsed">
                        <StackPanel>
                            <Label Content="Processing Rules" Style="{StaticResource SectionHeader}"/>

                            <Label Content="Timing" Foreground="#888" FontSize="11" Margin="0,0,0,5"/>
                            <RadioButton x:Name="KeepOriginalTiming" Content="Keep Original" IsChecked="True"/>
                            <RadioButton x:Name="SetDynamicTiming" Content="Recalculate (Dynamic)"/>

                            <Separator Background="#3F3F46" Margin="0,10"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel VerticalAlignment="Center">
                                    <Label Content="Actor Formatting" Foreground="#888" FontSize="11"/>
                                    <TextBlock Text="Customize how actors are detected" Foreground="#666" FontSize="10" TextWrapping="Wrap"/>
                                </StackPanel>
                                <Button x:Name="SetSeparatorBtn" Grid.Column="1" Content="Configure" Style="{StaticResource ModernBtn}" Click="SetSeparatorBtn_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Style="{StaticResource CardBorder}" Visibility="Visible" Height="110">
                        <StackPanel>
                            <Label Content="After Conversion" Style="{StaticResource SectionHeader}"/>
                            <CheckBox x:Name="OpenTheFolderAfterConvertionChkBox" Content="Open output folder"/>
                            <CheckBox x:Name="CloseTheAppAfterConvertionChkBox" Content="Close application"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="2" Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label x:Name="VersionLabel" Grid.Column="0" Content="v1.0.0" Foreground="#666" FontSize="11" Padding="0" VerticalAlignment="Bottom"/>
                <Button x:Name="AboutButton" Content="About" Grid.Column="2"  Style="{StaticResource ModernBtn}" Click="AboutButton_Click" VerticalAlignment="Bottom" />


                <Button x:Name="ConvertButton" Grid.Column="1" Content="START CONVERSION" 
                        Style="{StaticResource PrimaryBtn}" 
                        Width="200" Height="40" FontSize="14"
                        HorizontalAlignment="Center" Click="ConvertButton_Click"
                       >
                </Button>
            </Grid>
        </Grid>

        <Border x:Name="FileOpenOrDragAndDropBorder" Visibility="Hidden" 
                Background="#FF1E1E1E" BorderBrush="#007ACC" BorderThickness="2" CornerRadius="10" Margin="10"
                MouseLeftButtonDown="FileOpenOrDragAndDropBorder_MouseLeftButtonDown" 
                AllowDrop="True" Drop="FileOpenOrDragAndDropBorder_Drop">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="📂" FontSize="40" HorizontalAlignment="Center" Foreground="#007ACC" Margin="0,0,0,20"/>
                <TextBlock Text="Drop File Here" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                <TextBlock Text="or click anywhere to browse" FontSize="14" Foreground="#AAAAAA" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>