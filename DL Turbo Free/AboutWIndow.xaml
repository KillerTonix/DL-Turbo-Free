<Window x:Class="DL_Turbo_Free.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DL_Turbo_Free"
        mc:Ignorable="d" Background="#FF2E2E2E"
        WindowStartupLocation="CenterScreen"
        Title="About" Height="320" Width="800"
        WindowStyle="ToolWindow" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Window.Resources>
        <Style x:Key="TerminalBtn" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>

            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>
    <StackPanel>
        <Label x:Name="AppNameLabel" Content="DL Turbo Free" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalContentAlignment="Center" Margin="0,10,0,0"/>
        <TextBlock Text="DL Turbo Free is a powerful tool for converting your subtitles." Margin="10,10,10,0" FontSize="14" Foreground="White"/>
        <TextBlock Text="This application supports '.ass' and '.srt' input formats and converts into '.ass', '.srt' and make dialog list '.docx'." Margin="10,0,10,0" FontSize="14" Foreground="White"/>
        <TextBlock Text="Developed by Artur Tonoyan. For more information, contact me." TextWrapping="Wrap" Margin="10" FontSize="14" Foreground="White"/>
        <StackPanel Orientation="Vertical">
            
            <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                <Label Content="Email:" FontSize="12" Foreground="White" Padding="0,0,0,0"/>
                <TextBox Text="artur.tonoyan2012@yandex.ru" FontSize="12" Foreground="White" Background="#444" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="50,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                <Label Content="Vkontatke:"  FontSize="12" Foreground="White" Padding="0,0,0,0"/>
                <TextBox Text="https://vk.com/aatonoyan"  FontSize="12" Foreground="White" Background="#444" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="48,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                <Label Content="Discord:"  FontSize="12" Foreground="White" Padding="0,0,0,0"/>
                <TextBox Text="arturtonoyan"  FontSize="12" Foreground="White" Background="#444" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="129,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,5,10,10">
                <Label Content="Telegram:"  FontSize="12" Foreground="White" Padding="0,0,0,0"/>
                <TextBox Text="@BioWareZ"  FontSize="12" Foreground="White" Background="#444" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="127,0,0,0"/>
            </StackPanel>
        </StackPanel>

        <Button x:Name="CloseButton" Style="{StaticResource TerminalBtn}" Content="Close" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="CloseButton_Click" Margin="0,0,0,20"/>

    </StackPanel>
</Window>
